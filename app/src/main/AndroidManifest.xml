<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="demo.airscouter.brother.apps.bittworx.airdoio">

    <application
        android:allowBackup="true"
        android:configChanges="orientation|keyboardHidden|screenSize"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:largeHeap="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="sensorLandscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MedicalActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".EnterpriseActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".FinanceActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".DocumentViewActivity"
            android:screenOrientation="sensorLandscape"></activity>
    </application>

</manifest>